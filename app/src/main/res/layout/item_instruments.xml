<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.developer.musicatiiva.adapters.InstrumentAdapters" />
    </data>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_5sdp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_3sdp"
        android:layout_margin="@dimen/_2sdp"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relative"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">

            <de.hdodenhof.circleimageview.CircleImageView

                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/instrumentImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/instrument"
                app:civ_border_width="0.5dp"
                app:civ_border_color="#787979"

                />

            <TextView
                android:id="@+id/instrumentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/piano"
                android:textColor="@color/colorText"
                android:fontFamily="@font/lato_regular"
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/instrumentImage"
                android:layout_toStartOf="@+id/imageview_next"/>

            <ImageView

                android:id="@+id/imageview_next"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@mipmap/ic_next"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>




    </androidx.cardview.widget.CardView>

</RelativeLayout>

</layout>