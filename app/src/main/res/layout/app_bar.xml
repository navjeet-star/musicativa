<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="data"
            type="com.developer.musicatiiva.activities.MainActivity" />
    </data>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:navigationIcon="@mipmap/ic_back_btn"
            android:layout_gravity="center"
            android:gravity="center"
            android:minHeight="@dimen/_80sdp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

            />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@mipmap/ic_menu"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center|start"
            android:id="@+id/menu_drawable"

            />
        <ImageView
            android:id="@+id/imgPlus"
            android:layout_gravity="right"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/add"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:visibility="gone"


            />
        <LinearLayout
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <Button
                android:id="@+id/tv_appName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:text="@string/app_name"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/btn_musicativa"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/lato_bold"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible" />
            <TextView

                android:id="@+id/tv_activities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activities"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_15sdp"
                android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_marginVertical="@dimen/_2sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sdp"
            android:visibility="visible" />




        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_timer"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_gravity="center|end"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/tv_counter_value"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_20sdp"
                android:text=""
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone" />



            <ImageView
                android:layout_marginTop="@dimen/_1sdp"
                android:id="@+id/tv_start_counter"
                android:src="@drawable/timer_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible" />





        </LinearLayout>
