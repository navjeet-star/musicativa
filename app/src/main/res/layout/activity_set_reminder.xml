<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="data"
            type="com.developer.musicatiiva.activities.SetReminderActivity" />
    </data>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".activities.SetReminderActivity">

        <RelativeLayout
            android:id="@+id/relative_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="?attr/colorPrimary">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/lato_regular"
                android:text="Set Reminder"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_14sdp"

                />

            <ImageView

                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/back_arrow"

                />

            <ImageView

                android:id="@+id/imgDelete"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/delete"
                android:visibility="gone"

                />

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_top">


            <EditText
                android:id="@+id/edReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/gray_corner"
                android:drawablePadding="@dimen/_10sdp"
                android:fontFamily="@font/lato_regular"
                android:hint="Reminder"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/_12sdp"

                />

            <TextView

                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edReminder"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/lato_medium"
                android:text="Select Time"
                android:textSize="@dimen/_12sdp"

                />

            <TextView

                android:id="@+id/txtTimeset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/gray_corner"
                android:drawablePadding="@dimen/_10sdp"
                android:enabled="true"
                android:fontFamily="@font/lato_regular"
                android:hint="Select Time"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp" />

            <TextView

                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTimeset"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/lato_medium"
                android:text="Select Days"
                android:textSize="@dimen/_12sdp"

                />

            <LinearLayout
                android:id="@+id/linearDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/days"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtM"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/gray_corner"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="M"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"
                    />

                <TextView
                    android:id="@+id/txtT"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_corner"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="T"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txtW"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_corner"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="W"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txtTh"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_corner"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="Th"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:id="@+id/txtF"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_corner"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="F"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp"

                    />

                <TextView

                    android:id="@+id/txtS"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_corner"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="S"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/txtSu"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_corner"
                    android:fontFamily="@font/lato_medium"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="Su"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearDays"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/btn_background"
                android:fontFamily="@font/lato_medium"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Save"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

    </RelativeLayout>
</layout>