<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="data"
            type="com.developer.musicatiiva.activities.EnterOtpActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root"
        android:background="@drawable/background"
        tools:context=".activities.EnterOtpActivity">

        <ImageView
            android:id="@+id/ivBackIcon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@mipmap/ic_back_blue"
            android:onClick="@{()->data.onBackCLicked()}"
            android:layout_marginTop="@dimen/_5sdp"/>


        <ImageView
            android:id="@+id/imageview_logo"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:src="@drawable/mlog"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/imageview_logo"
            android:background="@color/colorGrey"/>

        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_below="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Enter OTP"
            android:textSize="@dimen/_16sdp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/lato_bold"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>
        <TextView
            android:id="@+id/text"
            android:layout_above="@+id/otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Please Enter OTP pin"
            android:textSize="@dimen/_15sdp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/lato_bold"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>

        <LinearLayout

            android:id="@+id/otp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:hint=""
                android:id="@+id/edit_text_input_1"
                android:maxLength="1"
                android:inputType="number"
                android:padding="15dp"
                android:background="@drawable/otp_input_box_drawable"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="number"
                android:id="@+id/edit_text_input_2"
                android:layout_marginLeft="10dp"
                android:maxLength="1"
                android:padding="15dp"
                android:background="@drawable/otp_input_box_drawable"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="wrap_content" />
            <EditText

                android:inputType="number"
                android:id="@+id/edit_text_input_3"
                android:layout_marginLeft="10dp"
                android:maxLength="1"
                android:padding="15dp"
                android:background="@drawable/otp_input_box_drawable"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="number"

                android:id="@+id/edit_text_input_4"
                android:layout_marginLeft="10dp"
                android:maxLength="1"
                android:padding="15dp"
                android:background="@drawable/otp_input_box_drawable"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="wrap_content" />


        </LinearLayout>

