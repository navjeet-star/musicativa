<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="10dp"
    android:layout_gravity="center"
    app:cardElevation="10dp"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:padding="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:minLines="1"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="Add Sub Instrument"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />





        </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="vertical"
                android:paddingEnd="5dp"
                >



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingRight="12dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="Add Instrument Title:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"

                    />

                <EditText

                    android:focusable="true"
                    android:id="@+id/editTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textColor="@android:color/black"
                    android:padding="12dp"
                    android:background="@drawable/rectangle_add_image"
                    android:text=""
                    android:textSize="12sp"

                    />

            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="Add Instrument Image:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"

            />
            <FrameLayout
                android:layout_gravity="center"
                android:background="@drawable/rectangle_add_image"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="5dp"

                android:paddingEnd="5dp"
                >

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/add_photo_icon"
                    android:layout_gravity="center"
                    android:src="@drawable/add_instrument"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/remove_photo"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_cross_blue"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>













        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"


            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSave"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/button_sub_instrument"

                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_20sdp"
                 android:layout_marginRight="@dimen/_20sdp"
                android:text="Save"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"

                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewCancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/button_sub_instrument"

                android:gravity="center"

                android:text="Cancel"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>






    </LinearLayout>




</androidx.cardview.widget.CardView>
</layout>