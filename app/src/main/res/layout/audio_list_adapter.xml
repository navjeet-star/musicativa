<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="activity"
            type="com.developer.musicatiiva.models.AllData" />
    </data>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_5sdp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_1sdp"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageIV"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/speaker"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fileno.10"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/lato_medium"
                android:layout_toRightOf="@id/imageIV"
                android:layout_marginLeft="@dimen/_12sdp"
                />



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct 03,2021 5:40"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/lato_regular"
                android:layout_toRightOf="@id/imageIV"
                android:layout_below="@id/nameTV"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_4sdp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/playedCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No of time Played: 3"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/lato_regular"
                android:layout_toRightOf="@id/imageIV"
                android:layout_below="@id/dateTV"
                android:layout_marginLeft="@dimen/_12sdp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/durationTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: 5 min"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/lato_regular"
                android:layout_toRightOf="@id/playedCountTV"
                android:layout_below="@id/dateTV"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:textAlignment="textEnd"
                android:layout_marginRight="@dimen/_10sdp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/play_logo"
                android:layout_alignParentEnd="true"
                android:layout_above="@id/durationTV"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_3sdp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>

</layout>