            android:name=".activities.MetronomeActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.EnterNewPasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
